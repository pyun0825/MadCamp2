        android:valueFrom="0"
        android:valueTo="-180"
        android:propertyName="rotationY"
        android:repeatMode="reverse"
        android:duration ="600"
        />
    <objectAnimator
        android:valueFrom="0"
        android:valueTo="-448"
        android:propertyName="translationX"
        android:repeatMode="reverse"
        android:duration ="600"
        />
