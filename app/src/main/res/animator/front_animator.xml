        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:propertyName="alpha"
        android:startOffset="300"
        android:duration="0"
        />
    <objectAnimator
        android:valueFrom="-448"
        android:valueTo="0.0"
        android:propertyName="translationX"
        android:startOffset="600"
        android:duration="0"
        />
